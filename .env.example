# ─── Supabase (shared) ─────────────────────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ─── Supabase (backend only — NEVER expose to browser) ─────────────────────────
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ─── Google Gemini ──────────────────────────────────────────────────────────────
GEMINI_API_KEY=your-gemini-api-key

# ─── FastAPI URL (used by Next.js server actions / client fetches) ──────────────
NEXT_PUBLIC_FASTAPI_URL=http://localhost:8000

# ─── FastAPI internal (backend .env only) ──────────────────────────────────────
# SUPABASE_URL=https://your-project-ref.supabase.co   # same as NEXT_PUBLIC_SUPABASE_URL
# SUPABASE_ANON_KEY=your-anon-key
# FRONTEND_URL=http://localhost:3000
